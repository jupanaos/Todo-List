<header class="header" id="header_navbar">
    <nav class="navbar navbar-light navbar-fixed-top" style="background-color: #e3f2fd;" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">To Do List app</a>

                <a href="{{ path('homepage')}}"><img class="header_logo" src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms"></a>
            </div>
        </div>
    </nav>

    <div class="header_wrapper">
        <ul>
            {% if is_granted('ROLE_ADMIN') %}
                <li>
                    <a href="{{ path('user_create') }}"><button class="btn btn-success">Créer un utilisateur</button></a>
                </li>
            {% endif %}
            
            {% if app.user %}
                <li>
                    <a href="{{ path('app_logout') }}"><button class="btn btn-danger">Déconnexion</button></a>
                </li>
            {% else %}
            
                <li>
                    <a href="{{ path('app_login') }}"><button class="btn btn-primary">Se connecter</a>
                </li>
            {% endif %}
        </ul>
    </div>
</header>