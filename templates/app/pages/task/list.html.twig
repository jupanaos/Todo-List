{% extends 'app/layout.html.twig' %}


{% block content %}
    <img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
    <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
    <div class="row">
        {% for task in tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h4 class="pull-right">
                        {% if task.isDone %}<span class="glyphicon glyphicon-ok"></span>{% else %}<span class="glyphicon glyphicon-remove"></span>{% endif %}
                    </h4>
                    <h4>{{ task.title }}</h4>
                    {% if is_granted('TASK_EDIT', task) %}
                    <a href="{{ path('task_edit', {'id' : task.id }) }}">
                        <button class="btn btn-primary btn-sm pull-right">Editer</button>
                    </a>
                    {% endif %}
                    <p>{{ task.content }}</p>
                </div>
                <div>
                    <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                        <button class="btn btn-success btn-sm pull-right">
                            {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                        </button>
                    </form>
                    {% if is_granted('TASK_DELETE', task) %}
                    <form action="{{ path('task_delete', {'id' : task.id }) }}">
                        <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
                    </form>
                    {% endif %}
                </div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée.
                <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">
                    <button class="btn btn-primary btn-sm pull-right">Créer une tâche</button>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
