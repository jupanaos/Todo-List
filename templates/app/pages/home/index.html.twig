{% extends 'app/layout.html.twig' %}

{% block content %}
    <section class="container">
        <div class="todo-hero">
            <img src="{{ asset('build/images/2920019.jpg') }}" alt="todo list">
            <h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
        </div>

        <div class="row">
            <a href="{{ path('task_create') }}">
                <button class="btn btn-success mb-4"><i class="bi bi-plus"></i> Créer une nouvelle tâche</button>
            </a>
            <a href="{{ path('task_list') }}">
                <button class="btn btn-secondary mb-4"><i class="bi bi-list-task"></i> Consulter la liste des tâches</button>
            </a>
        </div>
    </section>
{% endblock %}
